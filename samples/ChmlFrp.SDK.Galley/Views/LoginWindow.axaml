<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChmlFrp.SDK.Galley.ViewModels"
        x:Class="ChmlFrp.SDK.Galley.Views.LoginWindow"
        x:DataType="vm:LoginWindowViewModel"
        Title="Login ChmlFrp"
        Height="325" Width="500">

    <StackPanel VerticalAlignment="Center" MaxWidth="325" Spacing="5">
        <TextBox IsVisible="{Binding !IsUseToken}" Watermark="用户名" Text="{Binding Username}" />
        <TextBox IsVisible="{Binding !IsUseToken}" Watermark="密码" PasswordChar="*" Text="{Binding Password}" />
        <TextBox IsVisible="{Binding IsUseToken}" Watermark="用户令牌" PasswordChar="*" Text="{Binding Usertoken}" />
        <WrapPanel ItemSpacing="5">
            <CheckBox IsChecked="{Binding IsRememberMe}" Content="保持登录" />
            <CheckBox IsChecked="{Binding IsUseToken}" Content="使用令牌(token)登录" />
        </WrapPanel>
        <Button HotKey="Enter" Content="登录" HorizontalAlignment="Right" Command="{Binding LoginCommand}" />
    </StackPanel>
</Window>