<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChmlFrp.SDK.Galley.ViewModels"
        xmlns:labs="using:Avalonia.Labs.Controls"
        x:Class="ChmlFrp.SDK.Galley.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="MainWindow">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <labs:AsyncImage CornerRadius="100" Height="180" Width="{Binding $self.Height}" Source="{Binding ImageUrl}"
                         PlaceholderSource="../Assets/ChmlFrp.png" />
        <TextBlock HorizontalAlignment="Center">
            <Run FontSize="20" Text="{Binding Username}" />
            <Run FontSize="45" Text="👋"/>
        </TextBlock>
    </StackPanel>
</Window>