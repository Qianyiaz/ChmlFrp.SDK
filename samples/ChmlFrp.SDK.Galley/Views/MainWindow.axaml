<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChmlFrp.SDK.Galley.ViewModels"
        x:Class="ChmlFrp.SDK.Galley.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="ChmlFrp.SDK.Galley"
        MinHeight="325"
        MinWidth="500">
        
    <StackPanel MinWidth="250" Spacing="8" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Watermark="用户名" Text="{Binding Username}"/>
        <TextBox Watermark="密码" PasswordChar="*" Text="{Binding Password}"/>
        <Button HorizontalAlignment="Right" Content="登录" Command="{Binding LoginCommand}" HotKey="Enter"/>
    </StackPanel>
</Window>
