<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ChmlFrp.SDK.Galley.ViewModels"
        xmlns:labs="using:Avalonia.Labs.Controls"
        x:Class="ChmlFrp.SDK.Galley.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="MainWindow">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <labs:AsyncImage CornerRadius="100" Height="180" Width="{Binding $self.Height}" Source="{Binding ImageUrl}"
                         PlaceholderSource="../Assets/ChmlFrp.png">
            <labs:AsyncImage.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Refresh" HotKey="Ctrl+R" />
                </ContextMenu>
            </labs:AsyncImage.ContextMenu>
        </labs:AsyncImage>
        <TextBlock FontSize="25" HorizontalAlignment="Center">
            <Run Text="Hi," />
            <Run Text="{Binding Username}" />
            <Run FontSize="45" Text="👋"/>
        </TextBlock>
    </StackPanel>
</Window>